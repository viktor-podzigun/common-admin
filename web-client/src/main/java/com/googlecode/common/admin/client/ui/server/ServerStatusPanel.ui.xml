<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:c='urn:import:com.googlecode.common.client.ui'>
    
    <g:HTMLPanel>
        <table>
            <tr>
                <td><b>URL:</b></td>
                <td><g:Anchor ui:field="serverUrl">serverUrl</g:Anchor></td>
            </tr>
        </table>

        <br/><b>Current status:</b>
        <table border="1" width="400">
            <tr>
                <td width="65%" bgcolor="#C0C0C0">Start date</td>
                <td><g:Label ui:field="startDate"/></td>
            </tr><tr>
                <td bgcolor="#C0C0C0">Version</td>
                <td><g:Label ui:field="appVersion"/></td>
            </tr><tr>
                <td bgcolor="#C0C0C0">Build</td>
                <td><g:Label ui:field="appBuild"/></td>
            </tr><tr>
                <td bgcolor="#C0C0C0">Succeeded requests</td>
                <td><g:Label ui:field="succeededReqCount"/></td>
            </tr><tr>
                <td bgcolor="#C0C0C0">Failed requests</td>
                <td><g:Label ui:field="failedReqCount"/></td>
            </tr><tr>
                <td bgcolor="#C0C0C0">Active requests</td>
                <td><g:Label ui:field="activeReqCount"/></td>
            </tr><tr>
                <td bgcolor="#C0C0C0">Max active requests</td>
                <td><g:Label ui:field="maxActiveReqCount"/></td>
            </tr>
        </table>
    
        <br/><b>Restart info:</b>
        <table border="1" width="400">
            <tr>
                <td width="65%" bgcolor="#C0C0C0">Date</td>
                <td><g:Label ui:field="restartDate"/></td>
            </tr><tr>
                <td bgcolor="#C0C0C0">Author</td>
                <td><g:Label ui:field="restartAuthorLogin"/></td>
            </tr><tr>
                <td bgcolor="#C0C0C0">Count</td>
                <td><g:Label ui:field="restartCount"/></td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder>
